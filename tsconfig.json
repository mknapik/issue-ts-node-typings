{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "strict": true,
    "strictFunctionTypes": false,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2016"
    ],
    "allowSyntheticDefaultImports": false
  },
  "include": [
    "src/**/*.ts",
    "src/types.d.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
